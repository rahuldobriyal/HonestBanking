@model IEnumerable<HonestBank.Domain.Data.Department>

@{
    ViewBag.Title = "Admin : Departments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Departments</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.DepartmentID</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.Name })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin", @item))
                        {

                            @*@Html.Hidden("ProductID", item.ProductID)*@
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new Department", "Create", null,
new { @class = "btn btn-default" })
    </div>
</div>