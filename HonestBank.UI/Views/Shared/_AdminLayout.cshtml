<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div>
        @if (TempData["alertMessage"] != null)
        {
            <div class="alert alert-success">@TempData["alertMessage"]</div>
        }
        @if (TempData["errorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["errorMessage"]</div>
        }
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Admin")</li>
                </ul>                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="row panel">
            <div id="categories" class="col-xs-3">
                @Html.Action("Menu", "Nav") <!--Menu is the method being called and Nav is the controller which contains it-->
            </div>
            <div class="col-xs-8">
                @RenderBody()
            </div>
        </div>
        <hr />
    </div>
    <div class="container">
        <footer>
            <p><strong>&copy; @DateTime.Now.Year </strong><h4><strong>Honest Bank Pvt Ltd.</strong></h4> </p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
