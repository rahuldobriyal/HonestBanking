@model IEnumerable<HonestBank.Domain.Data.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3><strong>Products</strong></h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center"> Product Code</th>
                <th class="text-center">Name</th>
                <th class="text-center">Product Type Code</th>
                <th class="text-center">Creation Date</th>
                <th class="text-center">Expiry Date</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.ProductCode</td>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.ProductTypeCode</td>
                    <td class="text-center">@item.CreationDate</td>
                    <td class="text-center">@item.ExpiryDate</td>
                </tr>
            }
        </table>
    </div>
</div>

