@model IEnumerable<HonestBank.Domain.Data.State>

@{
    ViewBag.Title = "Admin : States";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3><strong>States</strong></h3>
        <div class="row">
            <div class="col-md-8">
                <div class="search-bar">
                    @using (Html.BeginForm("List", "States", FormMethod.Get))
                    {
                        @: <strong>Search State : </strong>@Html.TextBox("SearchText")
                        <input type="submit" value="Search" class="search-button" />
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th>Code</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.StateID</td>
                    <td>@item.StateName</td>
                    <td>@item.StateCode</td>
                </tr>
            }
        </table>
    </div>
</div>

