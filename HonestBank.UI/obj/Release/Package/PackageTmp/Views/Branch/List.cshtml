@model IEnumerable<HonestBank.Domain.ModelData.BranchModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3><strong>Branches</strong></h3>
        <div class="row">
            @*<div class="col-md-8">
                <div class="search-bar">
                    @using (Html.BeginForm("List", "Employee", FormMethod.Get))
                    {
                        @: <strong>Search Employee : </strong>@Html.TextBox("SearchText")
                        <input type="submit" value="Search" class="search-button" />
                    }
                </div>
            </div>*@
            <div class="col-md-4">
                @Html.ActionLink("Add new Branch", "Add", null,
new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Branch ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.BranchID</td>
                    <td>@Html.ActionLink(item.Name, "Edit", @item)</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.ZipCode</td>
                </tr>
            }
        </table>
    </div>
</div>

